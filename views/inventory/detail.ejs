

<!-- Allows for message display in the future if needed.
To display a message, replace the "#" symbol  with this the
"unescaped mark" (-) -->
<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>

<!-- Displays content -->
<%- view %>

<div id="review-tools">
    <% if (locals.loggedin) { %>
        <form action="/review/add-review" method="post" class="form" id="addReviewForm">
            <div class="form-inputs">
                <p>Add Review as <%= locals.accountData.account_firstname[0] %>.<%= locals.accountData.account_lastname %></p>
                <label for="review_text">Review:</label>
                <input type="text" name="review_text" id="reviewTextInput" type="text" required value="<%= locals.review_text %>">
        </div>
            <button type="submit" name="submit">Submit Review</button>
            <input type="hidden" name="account_id"
            <% if(locals.account_id) { %> value="<%= locals.account_id %>"
            <% } %>>
            <input type="hidden" name="inv_id"
            <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
            <% } %>>
        </form>
  <% } else { %>
    <a title="Click to log in" href="/account/login">Reviews can be added by logging in.</a>
    <% } %>
  </div>