<h1><%- title %></h1>

<p><%- messages() %></p> 

<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>

  <form action="/review/delete-review" method="post" class="form" id="updateForm">
    <div class="form-inputs">
        <p>Review from <%= locals.accountData.account_firstname[0] %>.<%= locals.accountData.account_lastname %></p>
        <p>Review Text: <%= locals.review_text %></p>
    </div>
    <button type="submit" name="submit">Delete Review</button>
    <p>WARNING: This deletion is permanent and cannot be undone.</p>
    <input type="hidden" name="review_id"
    <% if(locals.review_id) { %> value="<%= locals.review_id %>"
    <% } %>>
</form>