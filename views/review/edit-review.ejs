<h1><%- title %></h1>

<p><%- messages() %></p> 

<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>

  <form action="/review/edit-review" method="post" class="form" id="updateForm">
    <div class="form-inputs">
        <p>Review from <%= locals.accountData.account_firstname[0] %>.<%= locals.accountData.account_lastname %></p>
        <label for="review_text">Review Text:</label>
        <input type="text" name="review_text" id="reviewText" required value="<%= locals.review_text %>">
    </div>
    <button type="submit" name="submit">Save Review</button>
    <input type="hidden" name="review_id"
    <% if(locals.review_id) { %> value="<%= locals.review_id %>"
    <% } %>>
</form>
