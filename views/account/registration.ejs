<h1><%- title %></h1>

<p><%- messages() %></p> 

<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>

<form action="/account/register" method="post" class="form" id="registration-form">
    <div class="form-inputs">
        <label for="account_firstname">First Name:</label>
        <input type="text" name="account_firstname" id="account_firstname" required value="<%= locals.account_firstname %>">
        <label for="account_lastname">Last Name:</label>
        <input type="text" name="account_lastname" id="account_lastname" type="text" required value="<%= locals.account_lastname %>">
        <label for="account_email">Email:</label>
        <input name="account_email" type="email" id="account_email" required placeholder="Please enter a valid email address." value="<%= locals.account_email %>">
        <label for="account_password">Password:</label>
        <input name="account_password" type="password" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" required>
        <div>Passwords must be at least 12 characters, one must be a number, one must be a lowercase letter, one must be a capital letter, and one must be a non-alphanumeric character.</div>
</div>
    <button type="submit">REGISTER</button>
</form>